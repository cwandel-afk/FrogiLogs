{
    "compilerOptions": {
        "target": "ES2018",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "declarationDir": "./dist",
        "moduleResolution": "node",
        "sourceMap": true,
        "declarationMap": true,
        "composite": true,
        "allowJs": true,
        "emitDeclarationOnly": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "examples",
        "**/*.test.ts"
    ]
} 