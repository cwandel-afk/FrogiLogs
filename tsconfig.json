{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "rootDir": "./src",
      "baseUrl": "./src",
      "paths": {
        "*": ["*", "types/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "examples"]
  }